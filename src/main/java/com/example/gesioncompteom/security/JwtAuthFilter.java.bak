package com.example.gesioncompteom.security;

import io.jsonwebtoken.Claims;
import jakarta.servlet.FilterChain;
import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpHeaders;
import org.springframework.security.authentication.UsernamePasswordAuthenticationToken;
import org.springframework.security.core.context.SecurityContextHolder;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.web.authentication.WebAuthenticationDetailsSource;
import org.springframework.stereotype.Component;
import org.springframework.web.filter.OncePerRequestFilter;

import java.io.IOException;

/**
 * Filtre JWT pour valider les tokens JWTs dans chaque requête.
 * 
 * Workflow :
 * 1. Extrait le token du header Authorization: Bearer <token>
 * 2. Valide le token avec JwtService
 * 3. Extrait l'UUID de l'utilisateur (depuis Claims::getSubject)
 * 4. Charge l'utilisateur depuis la BD avec UserDetailsService
 * 5. Peuple le SecurityContext avec l'authentification
 * 
 * Si à tout moment le token est invalide ou l'utilisateur inexistant,
 * le SecurityContext reste vide et l'accès sera refusé.
 */
@Component
public class JwtAuthenticationFilter extends OncePerRequestFilter {

    @Autowired
    private JwtService jwtService;

    @Autowired
    private UserDetailsServiceImpl userDetailsService;

    @Override
    protected void doFilterInternal(
            HttpServletRequest request,
            HttpServletResponse response,
            FilterChain filterChain
    ) throws ServletException, IOException {
        try {
            // Étape 1 : Extraire le token du header Authorization
            String authHeader = request.getHeader(HttpHeaders.AUTHORIZATION);
            
            if (authHeader != null && authHeader.startsWith("Bearer ")) {
                String token = authHeader.substring(7); // Enlever "Bearer "
                
                // Étape 2 : Valider le token et récupérer les claims
                try {
                    Claims claims = jwtService.validateTokenAndGetClaims(token);
                    
                    // Étape 3 : Extraire l'UUID de l'utilisateur (depuis Claims::getSubject)
                    String userId = jwtService.extractUsernameFromClaims(claims);
                    
                    // Vérifier que l'UUID n'est pas vide
                    if (userId != null && !userId.isEmpty()) {
                        
                        // Étape 4 : Charger l'utilisateur depuis la BD
                        UserDetails userDetails = userDetailsService.loadUserByUsername(userId);
                        
                        // Étape 5 : Créer l'authentification et la mettre dans le SecurityContext
                        UsernamePasswordAuthenticationToken authentication = 
                                new UsernamePasswordAuthenticationToken(
                                        userDetails,
                                        token,
                                        userDetails.getAuthorities()
                                );
                        
                        // Ajouter les détails de la requête (IP, session, etc.)
                        authentication.setDetails(
                                new WebAuthenticationDetailsSource().buildDetails(request)
                        );
                        
                        // Peupler le SecurityContext
                        SecurityContextHolder.getContext().setAuthentication(authentication);
                    }
                    
                } catch (Exception ex) {
                    // Token invalide, expiré ou autre erreur
                    logger.debug("Impossible de valider le JWT: " + ex.getMessage());
                    SecurityContextHolder.clearContext();
                }
            }
            
        } catch (Exception ex) {
            logger.error("Erreur lors de la validation du JWT: " + ex.getMessage(), ex);
            SecurityContextHolder.clearContext();
        }
        
        // Continuer la chaîne de filtres
        filterChain.doFilter(request, response);
    }
}
