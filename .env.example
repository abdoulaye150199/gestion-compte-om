# Copy this file to .env.local and fill the real values (do NOT commit .env or .env.local)
# Neon Postgres connection
NEON_DATABASE_URL=jdbc:postgresql://ep-xxxxx-pooler.c-3.us-east-1.aws.neon.tech/ompay?sslmode=require&channel_binding=require
NEON_DATABASE_USERNAME=neondb_owner
NEON_DATABASE_PASSWORD=your_neon_password_here

# JWT secret used by the application (use a long random string)
JWT_SECRET=replace_with_a_long_random_secret

# Optional: disable Flyway when running in container if you want to manage migrations separately
SPRING_FLYWAY_ENABLED=false

# Alternative env variables for running the psql script
PGHOST=your-neon-host
PGPORT=5432
PGDATABASE=your_db
PGUSER=your_db_user
PGPASSWORD=your_db_password

# Twilio (optional) - used for sending SMS in production
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
